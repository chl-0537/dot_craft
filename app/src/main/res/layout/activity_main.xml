<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_rice_white">

    <Button
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@color/bg_blue"
        android:text="@string/text_restart"
        app:layout_constraintBottom_toTopOf="@+id/game_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <RelativeLayout
        android:id="@+id/game_container"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/shape_bg">

        <ImageView
            android:id="@+id/container0"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp" />

        <ImageView
            android:id="@+id/container1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_toEndOf="@+id/container0"
            android:layout_toRightOf="@+id/container0" />

        <ImageView
            android:id="@+id/container2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_toEndOf="@+id/container1"
            android:layout_toRightOf="@+id/container1" />

        <ImageView
            android:id="@+id/container3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_below="@+id/container0" />

        <ImageView
            android:id="@+id/container4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_toEndOf="@+id/container0"
            android:layout_toRightOf="@+id/container0"
            android:layout_below="@+id/container1" />

        <ImageView
            android:id="@+id/container5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_toEndOf="@+id/container1"
            android:layout_toRightOf="@+id/container1"
            android:layout_below="@id/container2" />

        <ImageView
            android:id="@+id/container6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_below="@+id/container3" />

        <ImageView
            android:id="@+id/container7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_toEndOf="@+id/container3"
            android:layout_toRightOf="@+id/container3"
            android:layout_below="@+id/container4" />

        <ImageView
            android:id="@+id/container8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_toEndOf="@+id/container4"
            android:layout_toRightOf="@+id/container4"
            android:layout_below="@id/container5" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/game"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/dot0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:background="@drawable/shape_dot_black" />

        <ImageView
            android:id="@+id/dot1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:layout_toEndOf="@+id/dot0"
            android:layout_toRightOf="@+id/dot0"
            android:background="@drawable/shape_dot_black" />

        <ImageView
            android:id="@+id/dot2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:layout_toEndOf="@+id/dot1"
            android:layout_toRightOf="@+id/dot1"
            android:background="@drawable/shape_dot_black" />

        <ImageView
            android:id="@+id/dot3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:layout_below="@+id/dot0"
            android:background="@drawable/shape_dot_black" />

        <ImageView
            android:id="@+id/dot4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:layout_toEndOf="@id/dot0"
            android:layout_toRightOf="@id/dot0"
            android:layout_below="@+id/dot1"
            android:background="@drawable/shape_dot_black" />

        <ImageView
            android:id="@+id/dot5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:layout_toEndOf="@+id/dot1"
            android:layout_toRightOf="@+id/dot1"
            android:layout_below="@id/dot2"
            android:background="@drawable/shape_dot_black" />

        <ImageView
            android:id="@+id/dot6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:layout_below="@+id/dot3"
            android:background="@drawable/shape_dot_black"/>

        <ImageView
            android:id="@+id/dot7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:layout_toEndOf="@+id/dot3"
            android:layout_toRightOf="@+id/dot3"
            android:layout_below="@+id/dot4"
            android:background="@drawable/shape_dot_black" />

        <ImageView
            android:id="@+id/dot8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:layout_toEndOf="@+id/dot4"
            android:layout_toRightOf="@+id/dot4"
            android:layout_below="@id/dot5"
            android:background="@drawable/shape_dot_black" />

        <ImageView
            android:id="@+id/backup_dot"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="20dp"
            android:src="@drawable/shape_dot_white"
            android:visibility="invisible" />

    </RelativeLayout>

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/bg_blue"
        android:text="@string/text_next"
        app:layout_constraintTop_toBottomOf="@+id/game_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>